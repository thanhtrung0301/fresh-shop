 <!-- Start All Title Box -->
    <div class="all-title-box">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <h2>Services</h2>
                    <ul class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/">Home</a></li>
                        <li class="breadcrumb-item active">Account Information</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <!-- End All Title Box -->

<!-- Page content -->
    <div class="container-info gradient-custom">
        <div class="row">
            <div class="col-12 col-md-12 col-lg-12 col-xl-12">
                <div class="card-info">
                    <div class="card-header bg-dark border-0">
                        <div class="row align-items-center mt-2 mb-2" >
                            <div class="col-8">
                                <h3 class="mb-0 fw-normal text-white">My account</h3>
                            </div>
                            <div class="col-4 text-right">
                                <a href="#!" class="btn btn-sm btn-primary">Settings</a>
                            </div>
                        </div>

                        <div class="card-body">
                             {{#if user}}
                            <img src="/images/member/member-1.jpg" alt="" id="member-info-img">
                            <form method="post">
                                <h2 class="mb-2 text-white">User Information</h2>
                                <div class="pl-lg-4">
                                    <div class="row">
                                        <div class="col-md-5 mb-4 pb-2">
                                            <div class="form-outline form-white">
                                                <input type="text" id="firstname" class="form-control form-control-lg" name="firstname" placeholder="First name" value={{user.firstname}} />
                                                <label class="form-label" for="firstname">First Name</label>
                                            </div>
                                        </div>
                                        <div class="col-md-7 mb-4 pb-2">
                                            <div class="form-outline form-white">
                                                <input type="text" id="lastname" class="form-control form-control-lg" name="lastname" placeholder="Last name" value={{user.lastname}} />
                                                <label class="form-label" for="lastname">Last Name</label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!-- Address -->
                                <h2 class="mt-5 mb-2 text-white">Contact Information</h2>
                                <div class="pl-lg-4">
                                    <div class="mb-4 pb-2">
                                        <div class="form-outline form-white">
                                        <input type="text" id="address" class="form-control form-control-lg" name="address" placeholder="Address" value={{user.address}} />
                                        <label class="form-label" for="address">Address</label>
                                        </div>
                                    </div>

                                    <div class="mb-4 pb-2">
                                        <div class="form-outline form-white">
                                        <input type="text" id="phonenumber" class="form-control form-control-lg" name="phonenumber" placeholder="Phonenumber" value={{user.phonenumber}} />
                                        <label class="form-label" for="phonenumber">Phone Number</label>
                                        </div>
                                    </div>

                                    
                                    <div class="mb-4">
                                        <div class="form-outline form-white">
                                        <input type="email" id="email" class="form-control form-control-lg" name="email" placeholder="Email" value={{user.email}} />
                                        <label class="form-label" for="email">Your Email</label>
                                        </div>
                                    </div>
                                </div>
                                <button type="submit" class="btn hvr-hover btn-regis">Update</button>
                            </form>
                            {{/if}}
                           
                        </div>
                    </div>
                </div>
            </div>
        </div>
  </div>